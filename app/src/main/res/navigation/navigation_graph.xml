<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation_graph"
    app:startDestination="@id/firstFragment">

    <fragment
        android:id="@+id/firstFragment"
        android:name="com.example.lamp.FirstFragment"
        android:label="fragment_first"
        tools:layout="@layout/fragment_first" >
        <action
            android:id="@+id/action_firstFragment_to_scandFragment"
            app:destination="@id/scandFragment" />
    </fragment>
    <fragment
        android:id="@+id/scandFragment"
        android:name="com.example.lamp.SecondFragment"
        android:label="fragment_scand"
        tools:layout="@layout/fragment_scand" >
        <action
            android:id="@+id/action_scandFragment_to_firstFragment"
            app:destination="@id/firstFragment" />
    </fragment>
</navigation>